{% extends 'base.html.twig' %}

{% block title %}Vehicule index{% endblock %}

{% block body %}
    <h1>Vehicule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Immatriculation</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Rental</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td>{{ vehicule.id }}</td>
                <td>
                    <div class="card-header">
                        <a href="{{ path('vehicule_show', { id: vehicule.id}) }}">
                            # {{ vehicule.id }} : {{ vehicule.immatriculation }}  -
                        </a>
                        <span class="badge badge-primary">{{ vehicule.immatriculation }}</span>

                    </div>
                </td>
                <td>{{ vehicule.brand }}</td>
                <td>{{ vehicule.model }}</td>
                <td>{{ vehicule.rental }}</td>
                <td>
                    <a href="{{ path('vehicule_show', {'id': vehicule.id}) }}">show</a>
                    <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vehicule_new') }}">Create new</a>
{% endblock %}
